                    <div class="order-table">
                        <table class="table">
                            <% if (Orders.length===0) { %>
                                <div class="alert alert-warning">
                                    Your Orders is empty. Please Make purchases.
                                </div>
                                <% } else { %>
                                    <thead>
                                        <tr>
                                            <th>OrderID</th>
                                            <th>Date</th>
                                            <!-- <th>Product</th> -->
                                            <th>Net_Quantity</th>
                                            <th>Net_Amount</th>
                                            <th>Status</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% Orders.forEach(Orders=> { %>
                                            <tr>
                                                <td><%=Orders.orderId%></td>
                                                <td><%= new Date(Orders.orderDate).toLocaleDateString('en-GB') %></td>
                                                <td><%= Orders.quantity %></td>
                                                <td><%= Orders.totalAmount %></td>
                                                <td class="
													<% if (Orders.status === 'placed') { %> text-primary <% } %>
													<% if (Orders.status === 'shipped') { %> text-info <% } %>
													<% if (Orders.status === 'delivered') { %> text-success <% } %>
													<% if (Orders.status === 'cancelled') { %> text-danger <% } %>
													<% if (Orders.status === 'Returned') { %> text-warning <% } %>
													">
													<%= Orders.status.charAt(0).toUpperCase() + Orders.status.slice(1) %>
												</td>
												

                                                <td>
													<a href="/user/orderdetails/<%= Orders._id %>" class="btn  btn-outline-success">Details</a>
													<button 
														class="btn btn-cancel btn" 
														<% if (Orders.status === 'delivered' || Orders.status === 'cancelled' || Orders.status === 'Returned') { %> 
															style="display: none;"
														<% } %>
														data-order-id="<%= Orders._id %>">
														Cancel Order
													</button>
													<% if (Orders.status === 'delivered' && !Orders.returnStatus ) { %> 
														<button class="return-btn btn btn-outline-warning" data-order-id="<%= Orders._id %>">
															Return Order
														</button>
														
													<% } else if (Orders.returnStatus == 'requested') { %>
														<p class="btn btn-info">
															Requested for Return
														</p>
													<% } else if (Orders.returnStatus == 'approved') { %>
														<p class="btn btn-success">
															Requested for Return Approved
														</p>
													<% } else if (Orders.returnStatus == 'rejected' ) { %>
														<p class="btn btn-danger">
															Requested for Return Rejected
														</p>
													<% } %>
												</td>
                                            </tr>
                                         <% }); %>
                                    </tbody>
                            <% } %>
                        </table>
                    </div>
