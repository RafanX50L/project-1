				key: 'rzp_test_3EYdWsxcryrgrR', // Replace with actual key
				amount: order.amount,
				currency: order.currency,
				order_id: order.id,
				handler: verifyPayment,
				prefill: { name: 'Rafan', email: 'rafan123@gmail.com', contact: '8281652046' },
				theme: { color: '#f37254' }
			};
