			try {
				const response = await fetch('/user/place-order', {
					method: 'POST',
					headers: { 'Content-Type': 'application/json' },
					body: JSON.stringify({ ...orderData, paymentMethod })
				});

				const result = await response.json();
				if (response.ok && result.orderId) {
					Swal.fire({ icon: 'success', title: 'Order Placed Successfully!', confirmButtonText: 'OK' })
						.then(() => { window.location.href = `/user/order-success/${result.orderId}`; });
				} else {
					Swal.fire({ icon: 'error', title: 'Error', text: result.message || 'Error placing order. Please try again.', confirmButtonText: 'OK' });
				}
			} catch (error) {
				console.error('Error placing order:', error);
			}
		}

