							<div class="card-header">
								<h4>Your Cart</h4>
							</div>
							<div class="card-body">
								<div class="cart-items" style="max-height: 240px; overflow-y: auto;">
									<% cartItems.forEach(item => { %>
										<div class="d-flex align-items-center justify-content-between mb-3">
											<div class="d-flex align-items-center">
												<img style="width: 10%; border-radius: 5px; border: 1px solid #444;"
													 src="/products/<%= item.productId.product_images[0] %>" alt="IMG">
												<div>
													<h5 class="mb-0"><%= item.productId.product_name %> (x<%= item.quantity %>)</h5>
												</div>
											</div>
											<div style="margin-right: 30px;">
												<h5 class="mb-0">$<%= item.productId.price %></h5>
											</div>
										</div>
									<% }); %>
								</div>
							</div>
						</div>
	
						<!-- Order Summary Section -->
						<div class="card mb-4 justcommon">
							<div class="card-header">
								<h4>Order Summary</h4>
							</div>
							<div class="card-body">
								<ul class="list-group list-group-flush justcommon">
									<li class="list-group-item d-flex justify-content-between justcommon">
										<span>Subtotal:</span>
										<span>$<span id="subtotal"><%= subtotal %></span></span>
									</li>
									<li class="list-group-item d-flex justify-content-between justcommon">
										<span>Discount:</span>
										<span>-$<span id="discountAmount"><%=discount %></span></span>
									</li>
									<li class="list-group-item d-flex justify-content-between justcommon">
										<strong>Total:</strong>
										<strong>$<span id="totalPriceDisplay"><%= totalPrice %></span></strong>
									</li>
								</ul>
							</div>
						</div>
						 <!-- Coupon Section -->
						 <div class="coupon-section">
							<h5>Apply Coupon</h5>
							<div class="d-flex align-items-center">
								<input type="text" id="couponCode" placeholder="Enter coupon code">
								<button type="button" id="applyCoupon">Apply</button>
							</div>
							<div class="discount-info" id="discountInfo"></div>
						</div>
					</div>
	
					<!-- Right Side: Select Address and Payment Method -->
					<div class="col-md-6">
						<!-- Saved Addresses Section -->
						<div class="card mb-4 justcommon">
							<div class="card-header">
								<h4>Select Saved Addresses</h4>
							</div>
							<div class="card-body" style="max-height: 200px; overflow-y: auto;">
								<% addresses.forEach(address => { %>
									<div class="address-container mb-3 p-3 border rounded position-relative"
										 data-id="<%= address._id %>">
										<input type="radio" name="selectedAddress" class="position-absolute"
											   style="top: 10px; left: 10px;" value="<%= address._id %>">
										<div class="address-details" style="margin-left: 30px;">
											<p><%= address.name %></p>
											<p><%= address.houseNumber %></p>
											<p><%= address.street %></p>
											<p><%= address.city %>, <%= address.state %> <%= address.zip %></p>
											<p><%= address.country %></p>
											<p>Phone: <%= address.phone %></p>
										</div>
									</div>
								<% }); %>
							</div>
							<div class="card-footer">
								<a href="/user/address" onclick="event.stopPropagation();">
									<button type="button" class="btn btn-primary mt-3" style="border-radius: 5px; width: 150px;">
										Add New Address
									</button>
								</a>
							</div>
						</div>
	
						<!-- Payment Method Section -->
						<div class="card mb-4 justcommon">
							<div class="card-header">
								<h4>Payment Method</h4>
							</div>
							<div class="card-body">
								<div class="form-check" style="margin-left: 20px;">
									<input class="form-check-input" type="radio" name="paymentMethod" id="online payment">
									<label class="form-check-label" for="online payment">online payment</label>
								</div>
								<div class="form-check" style="margin-left: 20px;">
									<input class="form-check-input" type="radio" name="paymentMethod" id="Cash On Delivery">
									<label class="form-check-label" for="Cash On Delivery">Cash On Delivery</label>
								</div>
								<div  class="form-check" style="margin-left: 20px;">
									<label>
										<input class="form-check-input" type="radio" name="paymentMethod" id="Wallet">
										<label class="form-check-label" for="Wallet"> Wallet</label>
									</label>
								</div>
							</div>
						</div>
					</div>
				</div>
	
				<!-- Place Order Button -->
				<div class="text-center">
					<button id="place-order" type="submit" data-cartItems='<%= cartItems %>' data-totalPrice='<%= totalPrice %>'
							class="btn btn-primary btn-lg">Place Order
					</button>
				</div>
			</form>
		</div>
