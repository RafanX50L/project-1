    <script>
        let cropper;
        const fileInput = document.getElementById('product_images');
        const previewContainer = document.getElementById('image_preview_container');
        const okButton = document.getElementById('okButton'); 
        const cropButton = document.getElementById('cropButton'); 
    
        fileInput.addEventListener('change', function (e) {
            const files = e.target.files;
    
            previewContainer.innerHTML = '';
    
            for (let i = 0; i < files.length; i++) {
                const reader = new FileReader();
                reader.onload = function (event) {
                    const imageContainer = document.createElement('div');
                    imageContainer.classList.add('image-container');
                    
                    const img = document.createElement('img');
                    img.src = event.target.result;
                    img.classList.add('image-preview');
    
                    const imageActions = document.createElement('div');
                    imageActions.classList.add('image-actions');
    
                    const cropBtn = document.createElement('button');
                    cropBtn.innerHTML = 'Crop';
                    cropBtn.classList.add('btn', 'btn-secondary', 'crop-btn');
                    cropBtn.type = 'button';
                    imageActions.appendChild(cropBtn);
    
                    const deleteBtn = document.createElement('button');
                    deleteBtn.innerHTML = 'Delete';
                    deleteBtn.classList.add('btn', 'btn-danger', 'delete-btn');
                    deleteBtn.type = 'button';
                    imageActions.appendChild(deleteBtn);
    
                    cropBtn.addEventListener('click', function () {
                        if (cropper) {
                            cropper.destroy();
                        }
    
                        cropper = new Cropper(img, {
                            aspectRatio: 1,
                            viewMode: 1,
                            autoCropArea: 0.65
                        });
    
                        cropBtn.style.display = 'none';
                        okButton.style.display = 'inline-block'; 
                    });
    
                    deleteBtn.addEventListener('click', function () {
                        previewContainer.removeChild(imageContainer);
                    });
    
                    imageContainer.appendChild(img);
                    imageContainer.appendChild(imageActions);
                    previewContainer.appendChild(imageContainer);
                };
                reader.readAsDataURL(files[i]);
            }
        });
    
        okButton.addEventListener('click', function () {
            if (cropper) {
                const canvas = cropper.getCroppedCanvas();
                const croppedBase64 = canvas.toDataURL(); 
    
                console.log(croppedBase64); 
    
                document.getElementById('cropped_image').value = croppedBase64;
    
                cropper.destroy();
                okButton.style.display = 'none'; 
            }
        });
    
        document.querySelector('form').addEventListener('submit', function (e) {
            e.preventDefault();
    
            const formData = new FormData(this);
            
            const croppedImage = document.getElementById('cropped_image').value;
            if (croppedImage) {
                formData.append('cropped_image', croppedImage);
            }
    
            fetch('/admin/category/add', {
                method: 'POST',
                body: formData
            })
            .then(response => response.json())
            .then(data => {
                console.log(data); 
            })
            .catch(error => {
                console.error('Error:', error); 
            });
        });
    </script>
    
    <script>
        document.addEventListener("DOMContentLoaded", function() {
            const form = document.getElementById("productForm");
            const productImages = document.getElementById("product_images");
            const allowedExtensions = ["image/jpeg", "image/jpg", "image/png", "image/gif"];
            const maxImageSize = 2 * 1024 * 1024; 
    
            function validateForm(event) {
                const productName = document.getElementById("product_name").value.trim();
                const category = document.getElementById("category").value.trim();
                const subCategory = document.getElementById("subCategory").value.trim();
                const description = document.getElementById("description").value.trim();
                const price = document.getElementById("price").value.trim();
                const stock = document.getElementById("stock").value.trim();
                const files = productImages.files;
    
                if (!productName || !category || !subCategory || !description || !price || !stock) {
                    Swal.fire("Error", "Please fill out all fields.", "error");
                    event.preventDefault();
                    return false;
                }
    
                if (isNaN(price) || price <= 0) {
                    Swal.fire("Error", "Please enter a valid price.", "error");
                    event.preventDefault();
                    return false;
                }
    
                if (isNaN(stock) || stock < 0) {
                    Swal.fire("Error", "Please enter a valid stock number.", "error");
                    event.preventDefault();
                    return false;
                }
    
                if (files.length === 0) {
                    Swal.fire("Error", "Please select at least one image.", "error");
                    event.preventDefault();
                    return false;
                }
    
                for (let i = 0; i < files.length; i++) {
                    const file = files[i];
                    if (!allowedExtensions.includes(file.type)) {
                        Swal.fire("Error", "Only JPEG and PNG formats are allowed.", "error");
                        event.preventDefault();
                        return false;
                    }
    
                    if (file.size > maxImageSize) {
                        Swal.fire("Error", `Image ${file.name} exceeds the 2MB size limit.`, "error");
                        event.preventDefault();
                        return false;
                    }
                }
    
                return true;
            }
    
            form.addEventListener("submit", function(event) {
                event.preventDefault(); 
                if (validateForm(event)) {
                    Swal.fire({
                        title: 'Are you sure?',
                        text: "Do you want to add this product?",
                        icon: 'warning',
                        showCancelButton: true,
                        confirmButtonColor: '#3085d6',
                        cancelButtonColor: '#d33',
                        confirmButtonText: 'Yes, add it!'
                    }).then((result) => {
                        if (result.isConfirmed) {
                            form.submit(); 
                        }
                    });
                }
            });
        });
    </script>
    
