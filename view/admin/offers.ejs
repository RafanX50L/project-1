    });

    // Validate form data on submission
    function validateForm(form) {
        const discount = form.find('input[name="discount"], input[name="editDiscount"]').val();
        const validFrom = new Date(form.find('input[name="validFrom"], input[name="editStartDate"]').val());
        const validUntil = new Date (form.find('input[name="validUntil"], input[name="editEndDate"]').val());
        const offerCode = form.find('input[name="offerCode"], input[name="editOfferCode"]').val().trim(); 

        const todayDate = new Date();
        todayDate.setHours(0, 0, 0, 0);

        if (validFrom < todayDate) {
            Swal.fire({
                icon: 'warning',
                title: 'Invalid Date',
                text: 'Start Date should be today or a future date.',
            });
            return false;
        }

        if (/^\d+$/.test(offerCode)) {
            Swal.fire({
                icon: 'error',
                title: 'Invalid Offer Code',
                text: 'Offer code contains only numbers, which is not valid.',
                confirmButtonText: 'OK'
            });
            return false;  
        }


        if (discount < 1 || discount > 80) {
            Swal.fire({
                icon: 'error',
                title: 'Invalid Discount',
                text: 'Discount must be between 1% and 80%.',
                confirmButtonText: 'OK'
            });
            return false;
        }

        if (new Date(validUntil) < new Date(validFrom)) {
            Swal.fire({
                icon: 'error',
                title: 'Invalid Date Range',
                text: 'End date cannot be earlier than start date.',
                confirmButtonText: 'OK'
            });
            return false;
        }

        return true;
    }

