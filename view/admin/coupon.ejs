                const currentStatus = this.getAttribute('data-status');
                console.log(couponId,currentStatus);
                
    
                fetch('/admin/coupons/toggle-status', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ id: couponId, status: currentStatus }),
                })
                .then(response => response.json())
                .then(data => {
                    if (data.message) {
                        Swal.fire({
                            icon: 'success',
                            title: 'Success',
                            text: data.message,
                            confirmButtonText: 'OK'
                        });
    
                        location.reload(); 
                    }
                })
                .catch(error => {
                    Swal.fire({
                        icon: 'error',
                        title: 'Error',
                        text: 'Failed to update coupon status.',
                        confirmButtonText: 'OK'
                    });
                    console.error('Error:', error);
                });
            });
        });
    </script>
    
    
    
