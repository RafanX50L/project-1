    <script>
        $(document).ready(function() {
            // Open Modals
            $('#addCouponButton').on('click', function() {
                $('#addCouponModal').modal('show');
            });
        
            $(document).on('click', '.edit-btn', function() {
                const couponId = $(this).data('id');
                const couponCode = $(this).data('code');
                const maxAmount = $(this).data('maxamount');
                const discountPercentage = $(this).data('discount');
                const startDate = new Date($(this).data('start')).toISOString().slice(0, 10);
                const endDate = new Date($(this).data('end')).toISOString().slice(0, 10);
        
                $('#editCouponId').val(couponId);
                $('#editCouponCode').val(couponCode);
                $('#editMaxAmount').val(maxAmount);
                $('#editDiscountPercentage').val(discountPercentage);
                $('#editStartDate').val(startDate);
                $('#editEndDate').val(endDate);
        
                $('#editCouponModal').modal('show');
            });
        
            // Validation Function
            function validateForm(formId) {
                const discountPercentage = $(`#${formId} #discountPercentage, #${formId} #editDiscountPercentage`).val();
                const maxAmount = $(`#${formId} #maxAmount, #${formId} #editMaxAmount`).val();
                const startDate = new Date($(`#${formId} #startDate, #${formId} #editStartDate`).val());
                const endDate = new Date($(`#${formId} #endDate, #${formId} #editEndDate`).val());
        
                if (discountPercentage < 1 || discountPercentage > 80) {
                    Swal.fire({
                        icon: 'warning',
                        title: 'Invalid Discount',
                        text: 'Discount percentage must be between 1 and 80.',
                    });
                    return false;
                }
        
                if (maxAmount < 100 || maxAmount > 20000) {
                    Swal.fire({
                        icon: 'warning',
                        title: 'Invalid Maximum Amount',
                        text: 'Maximum amount must be between 100 and 20,000.',
                    });
                    return false;
                }
                
                if (endDate <= startDate) {
                    Swal.fire({
                        icon: 'warning',
                        title: 'Invalid Date',
                        text: 'End date must be after the start date.',
                    });
                    return false;
                }
        
                return true;
            }
        
            // Add Coupon Form Submission
            $('#addCouponForm').on('submit', function(e) {
                e.preventDefault();
                
                if (!validateForm('addCouponForm')) return;
        
                $.ajax({
                    type: 'POST',
                    url: $(this).attr('action'),
                    data: $(this).serialize(),
                    success: function(response) {
                        window.location.href = '/admin/coupons';
                    },
                    error: function(xhr) {
                        const errorMessage = xhr.responseJSON?.message || 'An unexpected error occurred.';
                        Swal.fire({
                            icon: 'error',
                            title: 'Error',
                            text: errorMessage,
                            confirmButtonText: 'OK'
                        });
                    }
                });
            });
        
            // Edit Coupon Form Submission
            $('#editCouponForm').on('submit', function(e) {
                e.preventDefault();
        
                if (!validateForm('editCouponForm')) return;
        
                $.ajax({
                    type: 'POST',
                    url: $(this).attr('action'),
                    data: $(this).serialize(),
                    success: function(response) {
                        window.location.href = '/admin/coupons';
                    },
                    error: function(xhr) {
                        const errorMessage = xhr.responseJSON?.message || 'An unexpected error occurred.';
                        Swal.fire({
                            icon: 'error',
                            title: 'Error',
                            text: errorMessage,
                            confirmButtonText: 'OK'
                        });
                    }
                });
            });
        });
        </script>
