                }
    
                if (isNaN(price) || price <= 0) {
                    Swal.fire("Error", "Please enter a valid price.", "error");
                    return false;
                }
    
                if (isNaN(stock) || stock < 0) {
                    Swal.fire("Error", "Please enter a valid stock number.", "error");
                    return false;
                }
    
                return true;
            }
    
            if (!validateForm()) {
